{% extends "doctor/master.html.twig" %}
{% block title %}Create a Prescription
{% endblock title %}
{% block addHead %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
{% endblock addHead %}
{% block header %}{% endblock %}
{% block content %}
	<div class="container bg-light  p-4">
		<h3 class="text-center">Create a prescription for
			{{ patient.lastName }},
			{{ patient.firstName }}</h3>
		{% if errors %}
			<ul class="list-group">
				{% for e in errors %}
					<li class="list-group-item list-group-item-danger">{{e}}</li>
				{% endfor %}
			</ul>
		{% endif %}

		{{ include('/doctor/_prescriptionform.html.twig')}}
	</div>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
	<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
{% endblock content %}
{% block footer %}{% endblock footer %}
