{% block head %}
    <style>
        body, html {
    height: 100%;
    color: white;
  }
  a{
    color: white;
  }
  
  * {
    box-sizing: border-box;
  }


  .bg-image {
    /* The image used */
    background-image: url("/images/stock.jpg");
  
    /* Add the blur effect */
    filter: blur(8px);
    -webkit-filter: blur(8px);
  
    /* Full height */
    height: 100%;
  
    /* Center and scale the image nicely */
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  }
  
  /* Position text in the middle of the page/image */
  .bg-text {
    background-color: rgb(0,0,0); /* Fallback color */
    background-color: rgba(0,0,0, 0.5); /* Black w/opacity/see-through */
    color: white;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
    width: 50%;
    padding: 20px;
    border-radius: 10px;
  }
    </style>

{% endblock head %}
{% block content %}

<body>
    <div class="bg-image"></div>
<div class="bg-text">
{% if flashMessage %}
				<div class="row justify-content-center">
					{% if flashStatus == 'danger' %}
					<div class="flashMessage alert alert-danger m-2 text-center col-5" >{{flashMessage}}</button></div>
					{% elseif flashStatus == 'success' %}
					<div class="flashMessage alert alert-success m-2 text-center col-5" >{{flashMessage}}</button></div>
					{% else %}
					<div class="flashMessage alert alert-primary m-2 text-center col-5" >{{flashMessage}}</button></div>
					</div>
					{% endif %}
					
				{% endif %}
<h3 class="text-center">Welcome to Click Clinic</h3>
  {% if errorList %}
  <div class="row justify-content-center">
	<ul>
		{% for error in errorList %}
    <div class="row justify-content-center">
			<li class="list-group-item list-group-item-danger text-center col-5">{{ error }}</li>
      </div>
		{% endfor %}
	</ul>
  </div>

{% endif %}
<div class="container">
<form method="post">
<div class="row justify-content-center">
<div class="col-6 align-self-center">
    <label class="form-label">Email</label>
    <input type="email" name="email" value="{{ v.email }}" class="form-control">
    </div>
  </div>
    <div class="row justify-content-center">
    <div class="col-6 align-self-center">
    <label class="form-label">Password</label>
    <input type="password" name="password" value="{{ v.password }}" class="form-control">
    </div>
    </div>
      <div class="row g-3 justify-content-center row-cols-auto m-3">
          <div class="col">
            <input type="submit" class="btn btn-primary" value="Login">
          </div>
          <div class="col">
            <input type="reset" class="btn btn-secondary" value="Reset form">
          </div>
        </div>
</form>
<div  class="text-end" >
Are you a patient at Click Clinic without an account? <a href="/createaccount">Create Account Here</a>
</div>
</div>
</body>

</div>


{% endblock content %}